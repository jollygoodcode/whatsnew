#!/usr/bin/env ruby

Signal.trap("INT") { abort }

require "bundler/setup"
require "whatsnew"

if news = Whatsnew.about(Dir.pwd)
  puts news.read
else
  puts "Not found. Do you mind keep a changelog?"
  puts "Or tell the project owner to keep a changelog :)"
  puts "See http://keepachangelog.com"
end
